    <!-- Base application theme. -->
    <style name="Theme.TherapySpace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
       <item name="android:actionMenuTextColor">@color/menu_select_color</item>
        <item name="android:fontFamily">@font/helveticalight</item>
        <item name="fontWeight">600</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="android:textSize">12sp</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/menu_select_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
         <item name="android:statusBarColor" tools:targetApi="l">@color/page_bg</item>
       Customize your theme here. -->
    </style>

    <style name="text_btn_style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/menu_select_color</item>
        <item name="android:textColor">#ffffff</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="text_btn_white_style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">#000000</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="text_stroke_style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/small_text_color</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialogue_style</item>
    </style>

    <style name="Custom_Style" parent="TextAppearance.Design.Tab">
        <!-- Customize your theme here. -->
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/helveticanueu</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="wel_come_style">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="sign_btn_style" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- toolbar text font. -->
        <!-- <item name="fontFamily">@font/colabeerry</item> -->
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>

        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/sign_btn_bg</item>

    </style>
</resources>